<Page
    x:Class="Converter.View.ExchangePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Converter.Helpers"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ListView x:Name="ListValutes" DataContext="{x:Bind ViewModel}" ItemsSource="{Binding Valutes.Values}" 
                  SelectedItem="{x:Bind ViewModel.SelectedValute, Mode=TwoWay}" 
                  IsItemClickEnabled="True" ItemClick="ListView_ItemClick">
                <ListView.ItemTemplate>
                    <DataTemplate >
                        
                            <TextBlock FontSize="15" Text="{Binding CharCode}"/>
                            
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
      
    </Grid>
</Page>
